<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    >



           >
        <LinearLayout
            android:id="@+id/rel1"
android:orientation="vertical"
            android:padding="3dp"
            android:minWidth="200dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
android:layout_marginLeft="@dimen/_76sdp"
            android:background="@drawable/round_grey_send_msg"

            >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:textSize="@dimen/margin_12"
            android:textColor="@color/white"
            android:text="12 april 2018 9:03" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
android:layout_gravity="left"
                android:layout_height="wrap_content">
                <com.infoicon.bonjob.customview.CircleImageView
                    android:id="@+id/image_job"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical"

                    />


        <TextView
            android:layout_below="@+id/time"
            android:textColor="@color/white"
android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/textContentUser"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oooooooo"/>



            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/image_message"
                android:layout_gravity="right"

                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_message"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"

                    android:visibility="visible"

                    />
                <ImageView
                    android:id="@+id/videoView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/play_pink"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:visibility="visible"

                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/read_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="3dp"

                    android:background="@drawable/unread_msg_icon" />
            </FrameLayout>

