<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_60"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:contentInsetEnd="0dp"
    android:contentInsetLeft="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetStart="0dp"
    android:elevation="@dimen/margin_1"
    android:fitsSystemWindows="true"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:layout_scrollFlags="snap|scroll|enterAlways"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.infoicon.bonjob.customview.CustomsTextView
            android:id="@+id/textViewBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="@dimen/default_margin"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:text="@string/chat"
            android:textColor="@color/blue_color"
            android:textSize="@dimen/margin_25"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <com.infoicon.bonjob.customview.CustomsTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Christophe P"
                android:layout_gravity="center"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"/>

            <com.infoicon.bonjob.customview.CustomRadioButton
                android:id="@+id/rbOnlineStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/custom_user_online_status"
                android:drawablePadding="@dimen/default_margin"
                android:text="@string/offline"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/margin_15"
                android:background="@color/transparent"
                android:clickable="false"
                android:textStyle="bold"/>

        </LinearLayout>

        <com.infoicon.bonjob.customview.CircleImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/margin_45"
            android:layout_height="@dimen/margin_45"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_marginRight="@dimen/default_margin"
            android:src="@drawable/contact"/>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>