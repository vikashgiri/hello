<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <com.infoicon.bonjob.customview.CircleImageView
        android:id="@+id/imgViewJob"
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:src="@drawable/default_icon"/>


<LinearLayout
    android:layout_toRightOf="@+id/imgViewJob"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_toLeftOf="@+id/rel2"
    android:layout_centerVertical="true"
    android:padding="@dimen/_12sdp"
    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textFriendName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jone Done"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />




                <TextView
                    android:id="@+id/textMessage"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:maxLines="1"
                    android:textColor="@color/blue_color"
                    android:text=" hello"
                    android:textSize="15sp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/time"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-10-2019"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10sp" />

    <TextView
                android:id="@+id/msgCount"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="@dimen/_3sdp"
                android:gravity="center"
                android:background="@drawable/circle"
                android:text="0"
                android:visibility="gone"

                android:layout_margin="@dimen/_5sdp"
                android:textStyle="bold"
android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
    </LinearLayout>
<View
    android:layout_below="@+id/imgViewJob"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@color/colorPrimaryDark"></View>
        </RelativeLayout>




