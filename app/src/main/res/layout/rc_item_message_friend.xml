<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout2"
    android:layout_width="wrap_content"
android:layout_marginTop="8dp"
    android:layout_height="wrap_content"

    >



    <LinearLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:orientation="vertical"
        android:minWidth="200dp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_76sdp"
        android:background="@drawable/round_grey_rec_msg"
        android:padding="8dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/margin_12"
            android:textColor="@color/black"
            android:layout_gravity="right"
            android:text="12 april 2018 9:03" />
        <LinearLayout
            android:layout_below="@+id/time"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.infoicon.bonjob.customview.CircleImageView
            android:id="@+id/image_job"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"

            />

        <TextView

            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/textContentFriend"
            android:textSize="16dp"
            android:layout_width="wrap_content"
android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="vvvv"/>

        </LinearLayout>

        <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_below="@+id/time"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_message"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
<ImageView
    android:id="@+id/videoView"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/play_pink"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"/>
</RelativeLayout>

    </LinearLayout>

</FrameLayout>