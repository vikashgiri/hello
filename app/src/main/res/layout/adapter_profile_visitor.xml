<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/device_weight"
    android:layout_margin="@dimen/default_margin"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:background="@color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/media_card_view"
        android:layout_width="@dimen/margin_350"
        android:layout_height="@dimen/margin_350"
        android:orientation="vertical"
        android:layout_margin="@dimen/default_margin"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="@dimen/margin_40"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_shape_trasparent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/margin_1">


            <ImageView
                android:id="@+id/imageViewBG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/option_screen"
                android:scaleType="fitXY" />

            <com.infoicon.bonjob.customview.CustomsTextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_40"
                android:background="@color/transparent_half"
                android:paddingBottom="@dimen/margin_double"
                android:paddingLeft="@dimen/default_margin"
                android:paddingRight="@dimen/default_margin"
                android:paddingTop="@dimen/margin_double"
                android:text="Ceci est une image illustrant un pot d'ustenciles pour la cuisine"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"

                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>