<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialog_ludovic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_half"
        android:background="@drawable/dialog_shape"
        android:orientation="vertical"

        android:padding="@dimen/margin_15">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_double"
            android:layout_marginLeft="@dimen/margin_double"
            android:padding="@dimen/default_margin"
            android:layout_marginTop="@dimen/margin_double"
            android:src="@drawable/header_logo"/>


        <com.infoicon.bonjob.customview.CustomsTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/margin_50"

            android:text="@string/fill_pop_msg2"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_25"/>

        <com.infoicon.bonjob.customview.CustomsTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/margin_25"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/margin_half"

            android:text="@string/fill_pop_msg1"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_25"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"

android:layout_marginTop="@dimen/margin_25"            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_gravity="center"
android:padding="@dimen/margin_25"

                android:gravity="center"
                 android:background="@drawable/circle_border"
                android:spinnerMode="dropdown"/>
            <ImageView
                android:id="@+id/drop_down"
                android:layout_weight="0.5"

                android:layout_width="0dp"
                android:gravity="center"
                android:padding="@dimen/default_margin"


                android:layout_height="60dp"

                android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
        </LinearLayout>
        <com.infoicon.bonjob.customview.CustomsButton
            android:id="@+id/btnPostJob"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_weight="1"
            android:background="@drawable/round_button_pink"
            android:text="@string/validat"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_22"/>
        <com.infoicon.bonjob.customview.CustomsTextView            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_marginTop="@dimen/margin_double"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/margin_half"
            android:padding="@dimen/default_margin"
            android:text="@string/offer_validation"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_25"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/default_margin"
        android:src="@drawable/close_btn_pink"/>

</RelativeLayout>