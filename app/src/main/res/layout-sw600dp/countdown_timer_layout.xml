<?xml version="1.0" encoding="utf-8"?>
<com.infoicon.bonjob.customview.CountDownTimerView xmlns:android="http://schemas.android.com/apk/res/android"
                             android:id="@+id/counterview"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvCountDays"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tvCounthours"
            android:textSize="@dimen/text_size_normal"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tvCountMinute"
            android:textSize="@dimen/text_size_normal"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tvCountSeconds"
            android:textSize="@dimen/text_size_normal"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</com.infoicon.bonjob.customview.CountDownTimerView>