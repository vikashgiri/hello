<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_marginRight="@dimen/margin_40"
                android:background="@color/transparent"
                android:id="@+id/dialog_ludovic"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_half"
        android:background="@drawable/dialog_shape"
        android:padding="@dimen/default_margin"
        android:orientation="vertical">


        <com.infoicon.bonjob.customview.CustomsTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:layout_marginTop="@dimen/margin_double"
            android:lineSpacingExtra="@dimen/margin_half"
            android:text="@string/create_recruiter_acc"
            android:textColor="@color/pink_color"
            android:textSize="@dimen/margin_30"
            />

        <com.infoicon.bonjob.customview.CustomsTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:layout_marginTop="@dimen/margin_40"
            android:lineSpacingExtra="@dimen/margin_half"
            android:text="@string/click_recruiter_btn"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_30"
            />

        <com.infoicon.bonjob.customview.CustomsButton
            android:id="@+id/btnRecruit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_button_blue"


            android:layout_marginTop="@dimen/margin_40"

            android:text="@string/i_am_recruiter"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:padding="@dimen/margin_12"
            android:textSize="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"            style="?android:attr/borderlessButtonStyle"
            />

        <com.infoicon.bonjob.customview.CustomsButton
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_double"
            android:layout_margin="@dimen/default_margin"
            android:paddingLeft="@dimen/margin_double"
            android:paddingRight="@dimen/margin_double"
            android:background="@color/transparent"
            android:text="@string/cancels"
            android:padding="@dimen/margin_12"
            android:textSize="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"            android:textColor="@color/pink_color"
            android:textAllCaps="false"
            />

    </LinearLayout>

</RelativeLayout>