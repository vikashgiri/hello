<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="?colorControlActivated" android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="@color/blue_color"/>
        </shape>
    </item>

    <item android:color="?colorControlActivated" android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <stroke android:color="@color/blue_color" android:width="@dimen/margin_1"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>

</selector>
